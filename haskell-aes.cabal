cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Aes
                     , AesImport
                     , Masking
                     , Aes.Hypothesis
  other-modules:       Aes.Reference
                     , Aes.Types
                     , Aes.Util
                     , Aes.Random
                     , Aes.Bits
  build-depends:       base >=4.8 && <4.9
                     , array >=0.5 && <0.6
                     , bytestring
                     , random
  default-language:    Haskell2010
  if !flag(debug)
    ghc-options:    -Wall -threaded -O2 +RTS -N -RTS
  else
    ghc-options:    -Wall -threaded

executable cpa-hyps
  main-is:             cpa-hyps.hs
  build-depends:       base >=4.8 && <4.9
                     , bytestring
                     , haskell-aes
                     , filepath
                     , random
                     , optparse-applicative
  if !flag(debug)
    ghc-options:    -Wall -threaded -O2 +RTS -N -RTS
  else
    ghc-options:    -Wall -threaded
  hs-source-dirs:      .

test-suite tasty
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests
                  , src
  main-is:          tasty.hs
  other-modules:    Aes.Types

  build-depends:    haskell-aes
                  , base >= 4 && < 5
                  , containers
                  , random
                  , smallcheck == 1.1.*
                  , smallcheck-series
                  , tasty >= 0.8
                  , tasty-hunit
                  , tasty-smallcheck
                  -- haskell-aes dependencies
                  , array >=0.5 && <0.6
                  , bytestring
  default-language: Haskell2010
  ghc-options:    -Wall -threaded -O2 +RTS -N -RTS

flag debug
    default: False
    manual: True
