license:             BSD3
license-file:        LICENSE
author:              Damien CouroussÃ©
maintainer:          damien.courousse@cea.fr
-- A copyright notice.
-- copyright:
--
-- category:
build-type:          Simple
-- Extra files to be distributed with the package, such as examples or a
-- README.
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Aes
                     , AesImport
                     , Masking
                     , Aes.Hypothesis
  other-modules:       Aes.Reference
                     , Aes.Types
                     , Aes.Util
                     , Aes.Random
                     , Aes.Bits
  build-depends:       base >=4.8 && <4.9
                     , array >=0.5 && <0.6
                     , bytestring
                     , random
  default-language:    Haskell2010
  if !flag(debug)
    ghc-options:    -Wall -threaded -O2
  else
    ghc-options:    -Wall -threaded

executable aes-test
  -- .hs or .lhs file containing the Main module.
  main-is:             main.hs

  -- Other library packages from which modules are imported.
  build-depends:       base >=4.8 && <4.9
                     , bytestring
                     , haskell-aes
                     , random
  if !flag(debug)
    ghc-options:    -Wall -threaded -O2
  else
    ghc-options:    -Wall -threaded

  -- Directories containing source files.
  hs-source-dirs:      .

  -- Base language which the package is written in.
  default-language:    Haskell2010
  if !flag(debug)
    ghc-options:    -Wall -threaded -O2
  else
    ghc-options:    -Wall -threaded
  default-language: Haskell2010

test-suite tasty
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests
                  , src
  main-is:          tasty.hs
  other-modules:    Aes.Types

  build-depends:    haskell-aes
                  , base >= 4 && < 5
                  , containers
                  , random
                  , smallcheck == 1.1.*
                  , smallcheck-series
                  , tasty >= 0.8
                  , tasty-hunit
                  , tasty-smallcheck
                  -- haskell-aes dependencies
                  , array >=0.5 && <0.6
                  , bytestring
  default-language: Haskell2010
  ghc-options:    -Wall -threaded -O2

flag debug
    default: False
    manual: True
